<h1>Editing Item</h1>

<%= form_with(model: [@item.store, @item], local: true) do |form| %>


  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :size %>
    <%= form.number_field :size %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div class="field">
    <%= form.label :link %>
    <%= form.number_field :link %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<%= link_to 'Show', store_item_path(@item.store_id, @item.id) %> |
<%= link_to 'Back', store_items_path %>
