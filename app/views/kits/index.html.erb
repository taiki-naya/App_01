<p id="notice"><%= notice %></p>

<h1>Kits</h1>

<table>
  <thead>
    <tr>
      <th>Series</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kits.each do |kit| %>
      <tr>
        <td><%= kit.series %></td>
        <td><%= link_to 'Show', league_team_kit_path(@league, @team, kit.id) %></td>
        <td><%= link_to 'Edit', edit_league_team_kit_path(@league, @team, kit.id) %></td>
        <td><%= link_to 'Destroy', league_team_kit_path(@league, @team, kit.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

