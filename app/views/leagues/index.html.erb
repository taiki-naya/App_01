<h1>Leagues</h1>

<table>
  <thead>
    <tr>
      <th>リーグ名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leagues.each do |league| %>
      <tr>
        <td><%= league.name %></td>
        <td><%= link_to '詳細', league %></td>
        <td><%= link_to '編集', edit_league_path(league) %></td>
        <td><%= link_to '削除', league, method: :delete, data: { confirm: '削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

