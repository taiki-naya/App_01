<h4>新規登録</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= f.fields_for :profile do |user_profile| %>
    <div class="field">
      <div class="inputWithIcon">
        <%= user_profile.text_field :name, placeholder: 'Name' %>
        <i class="fa fa-user fa-lg fa-fw" aria-hidden="true"></i>
      </div>
    </div>

    <div class="field">
      <%= user_profile.label :※アイコンを追加する場合は画像を選択してください %>
      <%= user_profile.file_field :image %>
    </div>
  <% end %>

  <div class="field">
    <div class="inputWithIcon">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' %>
      <i class="fa fa-envelope fa-lg fa-fw" aria-hidden="true"></i>
    </div>
  </div>

  <div class="field">
    <div class="inputWithIcon">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (#{@minimum_password_length}以上入力してください)" %>
      <i class="fa fa-key fa-lg fa-fw" aria-hidden="true"></i>
    </div>
  </div>

  <div class="field">
    <div class="inputWithIcon">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password (再入力)' %>
      <i class="fa fa-key fa-lg fa-fw" aria-hidden="true"></i>
    </div>
  </div>

  <div class="actions">
    <div class="inputWithIcon">
      <%= f.submit "新規登録" %>
    </div>
  </div>
<% end %>
<%= render "users/shared/links" %>
